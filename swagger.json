{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Wallet group#5 back",
    "description": "Showing off swager-ui-express",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Authorization endpoints"
    }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "User registration",
        "parameters": [],
        "security": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "User Logion",
        "parameters": [],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "Logins's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Email or password is wrong",
            "content": {}
          }
        }
      }
    },
    "/api/users/logout": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "User Logout",
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "User's token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "204": {
            "description": "No Content",
            "content": {}
          },
          "401": {
            "description": "Missing header with authorization token",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/users/getUserData": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get user data",
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "User's token"
          }
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "Logins's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Email or password is wrong",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": [
          "email",
          "password",
          "repeatPassword",
          "name"
        ],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "repeatPassword": {
            "type": "string",
            "description": "Confirm user's password",
            "example": "qwerty123"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "User"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },
      "RegistrationResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "description": "User's id",
              "example": "32143232436545474"
            },
            "name": {
              "type": "string",
              "description": "User's name",
              "example": "User"
            },
            "email": {
              "type": "string",
              "description": "User's email",
              "format": "email"
            },
            "avatarURL": {
              "type": "url",
              "description": "User's avatar(gravatar)",
              "example": "http://www.example.com/avatar"
            },
            "balance": {
              "type": "number",
              "description": "User's balance",
              "example": 0
            },
            "category": {
              "type": "array",
              "description": "User's categories",
              "example": [
                {
                  "name": "category1",
                  "color": "#000000"
                },
                {
                  "name": "category2",
                  "color": "#FFFFFF"
                }
              ]
            },
            "token": {
              "type": "string",
              "description": "User's token",
              "example": "1234245465rfegtjtrt565"
            }
          }
        },
        "example": [
          {
            "id": "1",
            "email": "1@gmail.com",
            "avatarURL": "http://www.example.com/avatar1",
            "balance": 0,
            "category": [
              {
                "name": "category1",
                "color": "#000000"
              },
              {
                "name": "category2",
                "color": "#FFFFFF"
              }
            ],
            "token": "rgeg343556uutgeut"
          },
          {
            "id": "2",
            "email": "2@gmail.com",
            "avatarURL": "http://www.example.com/avatar2",
            "balance": 0,
            "category": [
              {
                "name": "category1",
                "color": "#000000"
              },
              {
                "name": "category2",
                "color": "#FFFFFF"
              }
            ],
            "token": "rgeg34355h65hyi7876uutgeut"
          }
        ]
      },
      "LoginResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string",
              "description": "User's token",
              "example": "1234245465rfegtjtrt565"
            }
          },
          "example": [
            {
              "token": "wtghfdf4556789jgfdgby987655"
            }
          ]
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}